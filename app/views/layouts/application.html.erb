<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <%= render "partials/nav", location: 'top' %>
    </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= login_helper %>

    <%= yield %>

    <%= session_helper %>
    
    <footer>
      &copy; <%= Time.now.year %> | <strong>Tim Craig</strong> All rights reserved.
    </footer>
  </body>
</html>
